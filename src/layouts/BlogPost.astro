---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Card, Typo } from "@koibumi-design/solidjs";
import { GLOBAL_STYLE } from "../consts";
import "../styles/article.scss";

// type Props = CollectionEntry<"blog">["data"];

// const { title, description } = Astro.props;

import type { Blogs } from '../libs/microcms';

interface Props extends Blogs {}
const {slug, eyecatch, title, createdAt, publishedAt, content, description} = Astro.props

---

<html lang="ja-JP">
  <head>
    <BaseHead {title} {description} />
  </head>

  <body>
    <Header />
    <main>
      <Card variant={GLOBAL_STYLE}>
        <article>
          <Typo variant="h1" emphasis>
            {title}
          </Typo>
          <slot />
        </article>
      </Card>
    </main>
    <Footer />
  </body>
</html>
