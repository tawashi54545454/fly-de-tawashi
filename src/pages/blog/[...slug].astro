import { getBlogs } from '../../libs/microcms';

export async function getStaticPaths() {
  const data = await getBlogs({ limit: 100 });
  const posts = data.contents;
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

